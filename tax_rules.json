  "activeFinancialYear": "FY2025-26",

  "sources": {
    "notes": "This file is designed for offline-first apps. App should cache this JSON and apply rules locally.",
    "primaryReferences": [
      "Income Tax e-Filing portal pages for AY 2025-26 slabs and new-regime standard deduction availability",
      "Budget/Finance Act updates for FY 2025-26 new regime slabs and enhanced 87A rebate",
      "Capital gains rate change effective 2024-07-23 (equity STCG/LTCG)"
    ]
  },

  "compatibility": {
    "minimumSupportedAppVersion": "1.0",
    "breakingChangePolicy": "Increase schemaVersion only when app parsing must change. Otherwise bump contentVersion.",
    "unknownFieldPolicy": "Clients must ignore unknown fields to support forward compatibility."
  },

  "taxpayerProfiles": {
    "residentialStatus": ["resident", "nonResident", "notOrdinarilyResident"],
    "ageCategories": [
      { "code": "lt60", "minAge": 0, "maxAge": 59 },
      { "code": "senior", "minAge": 60, "maxAge": 79 },
      { "code": "superSenior", "minAge": 80, "maxAge": null }
    ],
    "incomeTypes": [
      "salaried",
      "business",
      "freelancer",
      "rental",
      "capitalGains",
      "interest",
      "dividend",
      "cryptoVDA",
      "lotteryGambling",
      "other"
    ]
  },

  "globalRules": {
    "cess": { "type": "percent", "rate": 4, "name": "Health & Education Cess" },

    "rounding": {
      "taxRoundedTo": 10,
      "totalIncomeRoundedTo": 10,
      "rule": "Round off as per Income-tax rounding conventions (engine-level implementation)"
    },

    "marginalRelief": {
      "surchargeMarginalRelief": true,
      "rebateMarginalRelief": true
    },

    "professionalTax": {
      "maxPerYear": 2500
    },

    "defaultRegime": {
      "rule": "New regime is default; user can choose old regime where allowed."
    }
  },

  "hraRules": {
    "calculation": "min( HRA_received, rent_paid - 10%_of_salary_basicDA, (metro?50%:40%)_of_salary_basicDA )",
    "metroPercent": 50,
    "nonMetroPercent": 40,
    "rentExcessPercent": 10,
    "salaryComponentsForHRA": ["basic", "da_in_terms_of_retirement_benefits"]
  },

  "pfRules": {
    "employeeContributionPercent": 12,
    "employerContributionPercent": 12,
    "includedIn80C": true,
    "notes": "Employee PF generally counts within 80C limit under old regime (and where allowed)."
  },

  "npsRules": {
    "employee80CCD1Limit": 150000,
    "additional80CCD1BLimit": 50000,
    "employerPercentLimitDefault": 10,
    "employerPercentLimitGovt": 14,
    "notes": "Employer NPS (80CCD(2)) has percent caps that may differ for Govt vs others. Model keeps both."
  },

  "presumptiveTaxation": {
    "44AD": {
      "eligible": true,
      "incomeLimit": 20000000,
      "digitalProfitPercent": 6,
      "cashProfitPercent": 8
    },
    "44ADA": {
      "eligible": true,
      "incomeLimit": 5000000,
      "profitPercent": 50
    },
    "44AE": {
      "eligible": true,
      "notes": "Transporter presumptive rules vary; keep engine-driven or add detailed schedule later."
    }
  },

  "tdsRules": {
    "salary": true,
    "interest": true,
    "contractor": true,
    "freelancer": true,
    "rent": true,
    "cryptoVDA_194S": {
      "enabled": true,
      "tdsPercent": 1,
      "notes": "VDA TDS modeled for awareness/credit tracking; actual thresholds may evolve."
    }
  },

  "specialRateIncomeFramework": {
    "rebate87AApplicability": {
      "rule": "Rebate may not apply to special-rate income depending on FY/regime. See financialYears.*.rebate87A.rules."
    },
    "surchargeCapForCertainSpecialIncomes": {
      "enabled": true,
      "capPercent": 15,
      "appliesToSections": ["111A", "112", "112A", "dividend"],
      "notes": "Model supports special surcharge cap (engine should apply where legally applicable)."
    }
  },

  "capitalGains": {
    "equity": {
      "sections": {
        "stcg": "111A",
        "ltcg": "112A"
      },
      "rateSchedule": [
        {
          "effectiveFrom": "2018-04-01",
          "effectiveTo": "2024-07-22",
          "stcgRatePercent": 15,
          "ltcgRatePercent": 10,
          "ltcgExemptionAmount": 100000
        },
        {
          "effectiveFrom": "2024-07-23",
          "effectiveTo": null,
          "stcgRatePercent": 20,
          "ltcgRatePercent": 12.5,
          "ltcgExemptionAmount": 125000
        }
      ],
      "notes": "Equity STCG/LTCG rates changed effective 2024-07-23."
    },

    "debt": {
      "stcgSlabApplicable": true,
      "ltcgRatePercent": 20,
      "indexationAllowed": true,
      "notes": "Debt taxation can vary by instrument and acquisition date; keep engine rules extendable."
    },

    "property": {
      "ltcgRatePercent": 20,
      "indexationAllowed": true
    }
  },

  "incomeHeads": {
    "salary": {
      "standardDeduction": {
        "code": "StandardDeduction",
        "notes": "Amount differs by FY/regime; refer financialYears.*.regimes.*.salary.standardDeduction"
      },
      "exemptionsCommon": ["HRA", "LTA", "Gratuity", "LeaveEncashment"]
    },

    "houseProperty": {
      "standardDeductionPercent": 30,
      "interestDeductionSection": "24(b)",
      "selfOccupiedInterestCap": 200000,
      "lossSetoffCapAgainstOtherHeads": 200000,
      "notes": "House property loss set-off limits are modeled; detailed carry-forward rules can be added."
    },

    "otherSources": {
      "familyPensionDeduction": {
        "enabled": true,
        "method": "min(1/3_of_family_pension, 15000)",
        "notes": "Can vary by regime/FY; can be overridden in FY blocks."
      }
    }
  },

