      { "code": "80E", "name": "Education Loan Interest (full amount)", "defaultLimit": -1, "limitType": "unlimited" },

      { "code": "80EE", "name": "Home Loan Interest (1st home, ≤₹35L value)", "defaultLimit": 50000, "limitType": "amount" },
      { "code": "80EEA", "name": "Home Loan Interest (Affordable Housing ≤₹45L)", "defaultLimit": 150000, "limitType": "amount" },
      { "code": "80EEB", "name": "Electric Vehicle Loan Interest", "defaultLimit": 150000, "limitType": "amount" },

      { "code": "24(b)", "name": "Home Loan Interest Deduction", "defaultLimit": 200000, "limitType": "amount" },

      { "code": "80G", "name": "Donations to Charitable Institutions", "defaultLimit": -1, "limitType": "category_dependent" },
      { "code": "80GGA", "name": "Donations for Scientific Research", "defaultLimit": -1, "limitType": "unlimited" },
