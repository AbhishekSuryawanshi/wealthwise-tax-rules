      { "code": "ProfessionalTax", "name": "Professional Tax (State)", "defaultLimit": 2500, "limitType": "amount" },

      { "code": "StandardDeduction", "name": "Standard Deduction (Salaried)", "defaultLimit": 50000, "limitType": "amount" },

      { "code": "Gratuity", "name": "Gratuity Exemption u/s 10(10)", "defaultLimit": 2000000, "limitType": "amount" },
      { "code": "LeaveEncashment", "name": "Leave Encashment on Retirement u/s 10(10AA)", "defaultLimit": 2500000, "limitType": "amount" },

      { "code": "EPF", "name": "Employee Provident Fund (under 80C limit)", "defaultLimit": 150000, "limitType": "within_80C" },
      { "code": "VPF", "name": "Voluntary Provident Fund (under 80C limit)", "defaultLimit": 150000, "limitType": "within_80C" },

      { "code": "TDS", "name": "Tax Deducted at Source (credit against tax)", "defaultLimit": -1, "limitType": "credit" },

      { "code": "80U", "name": "Person with Disability (Self)", "defaultLimit": 125000, "limitType": "tiered_fixed", "tiers": [
        { "condition": "disability_40_to_79", "amount": 75000 },
        { "condition": "disability_80_or_more", "amount": 125000 }
